      },
      {
        "text": "备战",
        "iconPath": "static/tabBar/item.png",
        "selectedIconPath": "static/tabBar/item_select.png",
        "pagePath": "pages/tabBar/item/item"
      },
      {
        "text": "我的",
        "iconPath": "static/tabBar/me.png",
        "selectedIconPath": "static/tabBar/me_select.png",
        "pagePath": "pages/tabBar/me/me"
